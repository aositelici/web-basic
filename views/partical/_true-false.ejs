<section class="panel panel-default">
  <%if (topics.length !== 0) {%>
    <section class="panel-heading">
      <h4>四&nbsp判断题(每题10分 共20分)</h4>
    </section>
  <% } %>
  <section class="panel-body">
    <% topics.forEach(function(topic, i){ %>
    <section>
      <label><%= i + 1 %>.<%= topic.question %></label>
      <% topic.options.forEach(function(option){ %>
      <% if(option.item === "V"){ %>
      <span class="glyphicon glyphicon-ok text-danger"></span>
      <% } %>
      <% if(option.item === "X"){ %>
      <span class="glyphicon glyphicon-remove text-success"></span>
      <% } %>
      <input name=<%= topic.name %> type="radio"
             value=<%= option.item %> <% if(topic.input.indexOf(option.item) !== -1){ %>checked="checked"
        <% } %>
        >
      <% })%>
    </section>
    <% }) %>
  </section>
</section>